<?xml version="1.0" encoding="utf-8" ?>
<!--Properties of this file: Copy to output directory: Copy always to be able to use Configure() in main-->
<hibernate-configuration xmlns ="urn:nhibernate-configuration-2.2">
  <session-factory>
    <property name="connection.connection_string_name">default</property>

    <property name="connection.driver_class">
      NHibernate.Driver.SqlClientDriver
    </property>

    <property name="dialect">
      NHibernate.Dialect.MsSql2012Dialect
    </property>

    <!-- <property name="show_sql">true</property> -->   <!--To show sql statements in console-->

    <!-- <mapping assembly="NHibernateDemoCustomer"/> -->
  </session-factory>
</hibernate-configuration>
